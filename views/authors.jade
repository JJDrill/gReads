extends layout

block content
  main
    each item in pageData.authorList
      div(class="authorContainer", id=item.id)
        div(class="authorContainerImage")
          img(class="authorImage", src= item.Portrait_URL)
        div(class="authorContainerInfo")
          div(class="authorContainerTitleGenreButtons")
            div(class="authorContainerTitleGenre")
              h3(class="authorTitle") #{item.First_Name} #{item.Last_Name}
              p(class="authorBio") #{item.Biography}
            div(class="authorContainerButtons")
              button(class="authorButtons", name="btnEditAuthor") Edit
              button(class="authorButtons", name="btnRemoveAuthor") Remove
