extends layout

block content
  main
    each item in pageData.authorList
      div(class="bookContainer", id=item.id)
        div(class="bookContainerImage")
          img(class="bookImage", src= item.Book_Cover_URL)
        div(class="bookContainerInfo")
          div(class="bookContainerTitleGenreButtons")
            div(class="bookContainerTitleGenre")
              h3(class="bookTitle") #{item.Title}
              h4(class="bookGenre") #{item.Genre}
            div(class="bookContainerButtons")
              button(class="bookButtons", name="btnEditBook") Edit
              button(class="bookButtons", name="btnRemoveBook") Remove
          div
            h4 #{item.Description}
